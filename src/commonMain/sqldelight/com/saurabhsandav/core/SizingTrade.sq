
CREATE TABLE IF NOT EXISTS SizingTrade (
ticker TEXT NOT NULL UNIQUE,
entry TEXT NOT NULL,
stop TEXT NOT NULL,
hidden TEXT NOT NULL
);

insert:
INSERT INTO SizingTrade
VALUES ?
ON CONFLICT(ticker) DO UPDATE SET hidden = "false";

getAllNotHidden:
SELECT * FROM SizingTrade
WHERE hidden = "false"
ORDER BY ticker;

update:
UPDATE SizingTrade
SET entry = ?, stop = ?
WHERE ticker = ?;

hide:
UPDATE SizingTrade
SET hidden = "true"
WHERE ticker = ?;

hideAll:
UPDATE SizingTrade
SET hidden = "true";
